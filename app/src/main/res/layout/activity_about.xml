<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_cor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="100dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/illusAbout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:roundedCornerRadius="10dp"/>

                <TextView
                    android:id="@+id/whoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/whoMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:justificationMode="inter_word"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/whatMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textSize="16sp"
                    android:justificationMode="inter_word"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/whatHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Deobert Abiso\n• Jhona Belle\n• Juanito Baldo Jr.\n• Lance JO Bolar\n• Margart Augwie Ampan\n• Nichole Collamar"
                    android:textSize="16sp"
                    android:justificationMode="inter_word"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

        </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>